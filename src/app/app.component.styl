.event-day {
  h2 {
    display: block;
    background: #2B2B2B;
    color: white;
    margin: 0;
    padding: 1rem .2rem;
    text-align: center;
  }

  margin-bottom: 10vh;

}

.search-bar {
  .search-btn, .cancel-search {
    cursor: pointer
    margin-left: 1em
  }
  .chevron::after {
    // borrowed from bootstrap dropdown arrow
    display: inline-block;
    width: 0;
    height: 0;
    vertical-align: middle;
    content: "";
    border-top: .3em solid;
    border-right: .3em solid transparent;
    border-left: .3em solid transparent;
  }
  &.search-open .chevron::after {
    transform: rotate(180deg)
  }
}


a {
  text-shadow: rgba(0,0,0,0.9) 0 0 0px;
  transition: all .2s;
}
a:hover {
  color: white;
  text-shadow: rgba(0,0,0,0.9) 0 0 4px;
}

.header {
  position: relative;
  background: #444;
  color: white;
  height: 67px;

  .branding {
    position: absolute;
    left: 0;
    top: 67px
    font-size: 4rem;
    img {
      z-index: 1;
      position: relative;
      margin-top: -68.18%;
    }
  }

  .submit-link {
    padding-top: .5em;
    padding-left: 64px;
  }

  .search-bar {
    z-index: 1;
    position: absolute;
    top: .5em;
    right: .5em;
    color: white

    .cancel-search {
      opacity: 0
      transition: opacity .3s
      color: red
    }

    &.search-applied {
      .cancel-search {
        opacity: 1
      }
    }
  }
}

.search-options {
  transition: max-height .4s
  overflow: hidden
  &:not(.search-open) {
    max-height: 0 !important;
  }
}

.event-divider {
  border-top: 2px solid #ededed;
  width: 100%;
}

.row {
  font-size: 26px;
}

footerbg = #2B2B2B

.footer {
  background: footerbg;
  color: whitesmoke;
  font-size: 1rem;
  padding-top: 1em;
  padding-bottom: 1em;


  .fold {
    .fold-contents {
      opacity: 1;
      transition: opacity .4s
      overflow: hidden
    }
    &:not(.fold-open) {
      .fold-contents {
        opacity: 0 !important;
      }
    }
  }

  .footer-divider {
    margin: .5rem 0 1rem;
    border-bottom: solid #111 1.78px;
    text-align: right;
    a {
      text-decoration: none;
      color: darkgrey;
      margin-bottom: -.7em;
      display: inline-block;
      padding: 0 2em;
      background: footerbg;
    }
  }
}
